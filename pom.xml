<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.1.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.1.0 https://maven.apache.org/xsd/maven-4.1.0.xsd">
    <modelVersion>4.1.0</modelVersion>

    <groupId>dev.ikm.ike</groupId>
    <artifactId>ike-incubator</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>IKE Incubator</name>
    <description>Aggregator for IKE incubator projects</description>

    <subprojects>
        <subproject>ike-bom</subproject>
        <subproject>ike-mojo</subproject>
        <subproject>ike-pom</subproject>
        <subproject>komet-desktop</subproject>
        <subproject>rocks-jpms</subproject>
        <subproject>rocks-kb</subproject>
    </subprojects>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <extensions>
            <!-- Ensure OS/arch detection is active for the whole reactor -->
            <extension>
                <groupId>kr.motd.maven</groupId>
                <artifactId>os-maven-plugin</artifactId>
                <version>1.7.1</version>
            </extension>
        </extensions>
    </build>
</project>
